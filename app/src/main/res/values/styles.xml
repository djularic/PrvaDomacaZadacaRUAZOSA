<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tv_main">
        <item name="android:layout_width">@dimen/tv_main_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="et_main">
        <item name="android:layout_width">@dimen/et_main_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">@integer/et_max_length</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

    <style name="ll_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
